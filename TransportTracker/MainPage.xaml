<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TransportTracker.MainPage"
             Title="Транспортный трекер"
             BackgroundColor="{StaticResource SecondaryColor}">
    <VerticalStackLayout Spacing="20" Padding="30,40" VerticalOptions="Center">
        <Label Text="Добро пожаловать!" 
               Style="{StaticResource HeaderLabelStyle}" 
               HorizontalOptions="Center" />
        <Button Text="Работа" 
                Style="{StaticResource PrimaryButtonStyle}" 
                Clicked="OnWorkButtonClicked" />
        <Button Text="Маршруты" 
                Style="{StaticResource PrimaryButtonStyle}" 
                Clicked="OnRoutesButtonClicked" />
        <Button Text="Водители" 
                Style="{StaticResource PrimaryButtonStyle}" 
                Clicked="OnDriversButtonClicked" />
    </VerticalStackLayout>
</ContentPage>
